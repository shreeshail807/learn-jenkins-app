pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }

            steps {
                script {
                    if (isUnix()) {
                        // Linux-specific commands
                        sh '''
                            echo "Running on Linux"
                            ls -la
                            node --version
                            npm --version
                            npm ci
                            npm run build
                            ls -la
                        '''
                    } else {
                        // Windows-specific commands
                        def workspaceUnixStyle = WORKSPACE.replace('\\', '/').replace('C:/', '/c/')
                        bat """
                            echo "Running on Windows"
                            dir
                            node --version
                            npm --version
                            npm ci
                            npm run build
                            dir
                        """
                    }
                }
            }
        }
    }
}
