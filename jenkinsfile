pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }

            steps {
                script {
                    // Windows-specific commands
                    bat '''
                        echo "Running on Windows"
                        setlocal enabledelayedexpansion
                        dir
                        node --version
                        npm --version
                        npm ci
                        npm run build
                        dir
                        endlocal
                    '''
                }
            }
        }
    }
}
