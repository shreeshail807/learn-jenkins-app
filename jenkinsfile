pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                script {
                    def workspacePath = ''
                    
                    if (isUnix()) {
                        // Linux/Unix-style paths
                        workspacePath = pwd()
                    } else {
                        // Windows-style path translation for Docker
                        workspacePath = powershell(returnStdout: true, script: '''
                            $path = (Get-Location).Path
                            $path -replace '\\', '/'
                        ''').trim()
                    }

                    echo "Using workspace path: ${workspacePath}"

                    // Execute build commands
                    if (isUnix()) {
                        sh '''
                            ls -la
                            node --version
                            npm --version
                            npm ci
                            npm run build
                            ls -la
                        '''
                    } else {
                        bat '''
                            dir
                            node --version
                            npm --version
                            npm ci
                            npm run build
                            dir
                        '''
                    }
                }
            }
        }
    }
}
